---
import { Phone, MessageCircle, MapPin } from "lucide-react";

const getCurrentYear = () => new Date().getFullYear();
---

<footer class="bg-muted/30 border-t border-border">
  <div class="container mx-auto px-4 py-16 md:py-24">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-12">
      <div class="col-span-2 lg:col-span-2">
        <a href="/" class="text-2xl font-bold mb-6 block">MAB</a>
        <div class="space-y-4">
          <div class="flex items-center gap-3 text-muted-foreground group">
            <Phone
              className="w-5 h-5 transition-colors group-hover:text-foreground"
            />
            <span class="text-sm">(43) 3423-2244</span>
          </div>
          <div class="flex items-center gap-3 text-muted-foreground group">
            <MessageCircle
              className="w-5 h-5 transition-colors group-hover:text-foreground"
            />
            <span class="text-sm">(43) 99982 0728 | (43) 99974 0457</span>
          </div>
          <div class="flex items-start gap-3 text-muted-foreground group">
            <MapPin
              className="w-5 h-5 mt-0.5 transition-colors group-hover:text-foreground"
            />
            <span class="text-sm"
              >Rua Tamandaré, 544 – Barra Funda, Apucarana – PR, 86800-210</span
            >
          </div>
        </div>
      </div>

      <div>
        <h3 class="font-semibold mb-6">Início</h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/produtos"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Produtos</a
            >
          </li>
          <li>
            <a
              href="/carrinho"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Carrinho</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold mb-6">Empresa</h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/quem-somos"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Quem somos</a
            >
          </li>
          <li>
            <a
              href="/suporte"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Suporte técnico</a
            >
          </li>
          <li>
            <a
              href="/contato"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Contato</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold mb-6">Legal</h3>
        <ul class="space-y-4">
          <li>
            <a
              href="#"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Privacidade</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-muted-foreground hover:text-foreground transition-colors"
              >Termos de Uso</a
            >
          </li>
        </ul>
      </div>
    </div>

    <div
      class="pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-muted-foreground"
    >
      <p>&copy; {getCurrentYear()} MAB. Todos os direitos reservados.</p>
    </div>
  </div>
</footer>
